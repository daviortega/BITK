#mcps.df <- melt(mcps[,order(o)], id.vars = "COGs")

adap.df <- melt(adap, id.vars = "COGs")
mcps.df <- melt(mcps, id.vars = "COGs")
mcps.df\$prot <- c("mcps")
adap.df\$prot <- c("adap")

chemo.df <- rbind(adap.df, mcps.df)
chemo.df\$cogpres <- ifelse(chemo.df\$value != 0 , 1, 0)
